# --- API KEYS ---
OPENROUTER_API_KEY=sk-or-v1-your-key-here

# --- DOMAIN & SSL ---
# Your domain (e.g., ai-debates.net) or 'localhost' for local testing
DOMAIN_NAME=localhost
# Full site URL for OpenRouter ranking
SITE_URL=https://ai-debates.net
# Email for Let's Encrypt notifications
ACME_EMAIL=your-email@example.com

# --- ADMIN PANEL ---
ADMIN_USER=admin
ADMIN_PASSWORD=strong-password-here
SECRET_KEY=generate-a-random-string-here

# --- DATABASE ---
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_debates

# --- NETWORKING ---
# Allowed origins for CORS (comma separated)
ALLOWED_ORIGINS=https://ai-debates.net,http://localhost

# Internal URLs (usually don't need to change if using docker-compose)
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}
REDIS_URL=redis://redis:6379/0
